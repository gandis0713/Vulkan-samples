{
	"version": 3,
	"cmakeMinimumRequired": {
		"major": 3,
		"minor": 21,
		"patch": 0
	},
	"configurePresets": [
    {
      "name": "base",
      "cacheVariables": {
				"CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
			}
    },
		{
			"name": "base-osx",
			"inherits": "base",
			"condition": {
				"type": "equals",
				"lhs": "${hostSystemName}",
				"rhs": "Darwin"
			}
		},
		{
			"name": "base-osx-debug",
			"inherits": "base-osx",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Debug"
			}
		},
		{
			"name": "base-arm64-osx-debug",
			"inherits": "base-osx-debug",
			"cacheVariables": {
				"VCPKG_TARGET_TRIPLET": "arm64-osx"
			}
		},
		{
			"name": "arm64-osx-ninja-debug",
			"inherits": "base-arm64-osx-debug",
			"displayName": "arm64-osx-ninja-debug",
			"binaryDir": "${sourceDir}/build/arm64-osx-ninja/debug",
			"installDir": "${sourceDir}/install/arm64-osx-ninja/debug",
			"generator": "Ninja"
		},
		{
			"name": "arm64-osx-xcode-debug",
			"inherits": "base-arm64-osx-debug",
			"displayName": "arm64-osx-xcode-debug",
			"binaryDir": "${sourceDir}/build/arm64-osx-xcode/debug",
			"installDir": "${sourceDir}/install/arm64-osx-xcode/debug",
			"generator": "Xcode"
		},
    {
      "name": "base-windows",
      "inherits": "base",
			"condition": {
				"type": "equals",
				"lhs": "${hostSystemName}",
				"rhs": "Windows"
			}
    },
		{
			"name": "base-windows-debug",
			"inherits": "base-windows",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Debug"
			}
		},
		{
			"name": "base-x64-windows-debug",
			"inherits": "base-windows-debug",
			"cacheVariables": {
				"VCPKG_TARGET_TRIPLET": "x64-windows"
			}
		},
		{
			"name": "x64-windows-vs2022-debug",
			"inherits": "base-x64-windows-debug",
			"displayName": "x64-windows-vs2022-debug",
			"binaryDir": "${sourceDir}/build/x64-windows-vs2022/debug",
			"installDir": "${sourceDir}/install/x64-windows-vs2022/debug",
     		"generator": "Visual Studio 17 2022"
		},
		{
			"name": "x64-windows-ninja-debug",
			"inherits": "base-x64-windows-debug",
			"displayName": "x64-windows-ninja-debug",
			"binaryDir": "${sourceDir}/build/x64-windows-ninja/debug",
			"installDir": "${sourceDir}/install/x64-window-ninja/debug",
     		"generator": "Ninja"
		}
	],
	"buildPresets": [
		{
			"name": "arm64-osx-ninja-debug",
			"configurePreset": "arm64-osx-ninja-debug",
			"configuration": "Debug"
		},
		{
			"name": "arm64-osx-xcode-debug",
			"configurePreset": "arm64-osx-xcode-debug",
			"configuration": "Debug"
		},
		{
			"name": "x64-windows-vs2022-debug",
			"configurePreset": "x64-windows-vs2022-debug",
			"configuration": "Debug"
		},
		{
			"name": "x64-windows-ninja-debug",
			"configurePreset": "x64-windows-ninja-debug",
			"configuration": "Debug"
		}
	],
	"testPresets": [
		{
			"name": "arm64-osx-ninja-debug",
			"configurePreset": "arm64-osx-ninja-debug",
			"configuration": "Debug",
			"output": {
				"outputOnFailure": true
			},
			"execution": {
				"noTestsAction": "error",
				"stopOnFailure": false
			}
		},
		{
			"name": "arm64-osx-xcode-debug",
			"configurePreset": "arm64-osx-xcode-debug",
			"configuration": "Debug",
			"output": {
				"outputOnFailure": true
			},
			"execution": {
				"noTestsAction": "error",
				"stopOnFailure": false
			}
		},
		{
			"name": "x64-windows-vs2022-debug",
			"configurePreset": "x64-windows-vs2022-debug",
			"configuration": "Debug",
			"output": {
				"outputOnFailure": true
			},
			"execution": {
				"noTestsAction": "error",
				"stopOnFailure": false
			}
		},
		{
			"name": "x64-windows-ninja-debug",
			"configurePreset": "x64-windows-ninja-debug",
			"configuration": "Debug",
			"output": {
				"outputOnFailure": true
			},
			"execution": {
				"noTestsAction": "error",
				"stopOnFailure": false
			}
		}
	]
}